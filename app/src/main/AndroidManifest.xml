<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.bsalazar.kekomo">

  <application
    android:allowBackup="true"
    android:icon="@mipmap/kekomo_icon"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/kekomo_icon"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">

    <activity
      android:name=".SplashActivity"
      android:label="@string/app_name"
      android:screenOrientation="portrait"
      android:theme="@style/AppTheme.FullScreen">

      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity
      android:name=".MainActivity"
      android:label="@string/app_name"
      android:screenOrientation="portrait" />

    <activity
      android:name=".ElectionActivity"
      android:label="Eleccion"
      android:screenOrientation="portrait"
      android:theme="@style/AppTheme.NoActionBar.StatusBar" />

    <activity
      android:name=".ui_calendar.CalendarActivity"
      android:theme="@style/AppTheme.NoActionBar"
      android:screenOrientation="portrait" />


    <activity
      android:name=".ui_dishes.NewDishActivity"
      android:label="@string/activity_new_dish"
      android:screenOrientation="portrait" />

    <activity
      android:name=".ui_dishes.MyDishesActivity"
      android:label="@string/activity_my_dishes"
      android:screenOrientation="portrait" />

    <activity
      android:name=".ui_dishes.DishDetailActivity"
      android:label="@string/activity_dish_detail"
      android:screenOrientation="portrait"
      android:theme="@style/AppTheme.NoActionBar" />

    <activity
      android:name=".general.GaleryActivity"
      android:label="@string/activity_galery"
      android:screenOrientation="portrait" />


    <activity
      android:name=".ui_pantry.PantryActivity"
      android:label="@string/activity_pantry"
      android:screenOrientation="portrait" />


    <provider
      android:name="android.support.v4.content.FileProvider"
      android:authorities="${applicationId}.provider"
      android:exported="false"
      android:grantUriPermissions="true">
      <meta-data
        android:name="android.support.FILE_PROVIDER_PATHS"
        android:resource="@xml/file_paths" />
    </provider>
  </application>
  <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

  <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

</manifest>