<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/background_add_product"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/alpha_charcoal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:background="@drawable/background_white_corners"
        android:clickable="true">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/type_recycler"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

        <EditText
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre"/>

        <Switch
            android:id="@+id/switch_product_frozen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/frozen"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:textSize="15sp"
                android:textColor="@color/red_text"/>

            <TextView
                android:id="@+id/add_product_button"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:text="@string/add"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="14sp"
                android:gravity="right"
                android:background="?android:selectableItemBackground"
                android:textColor="@color/colorAccentDark"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>